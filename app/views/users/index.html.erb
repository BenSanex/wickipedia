<h2>All Users</h2>
<div>
  <% @users.each do |user| %>
    <% if current_user != user %>
      <div>
        <span class="user"><%= user.username %></span> - user since <%=time_ago_in_words(user.created_at)%><br>
        <% if user.admin %>
          ADMIN
          |
          <%= link_to "Demote", admin_user_path(user), method: :put, data: { confirm: "Are you sure?" }  %>
        <% else %>
          <%= link_to "Promote", admin_user_path(user), method: :put, data: { confirm: "Are you sure?" }  %>
        <% end %>
        |
          <%= link_to "Delete", user, method: :delete, data: { confirm: "Are you sure?" } %>
      </div>
        <% end %>
    <% end %>
</div>
