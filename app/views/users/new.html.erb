<h2>Sign up</h2>
<div>
  <%= form_for @user do |f| %>
    <% if @user.errors.any? %>
      <div id="errors">
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.label :username %><br />
      <%= f.text_field :username, autofocus: true %>
    </div>

    <div>
      <%= f.label :email %><br />
      <%= f.email_field :email %>
    </div>    

    <div>
      <%= f.label :password %><br />
      <%= f.password_field :password %>
    </div>

    <div>
      <%= f.submit "Sign up" %>
    </div>
  <% end %>
</div>