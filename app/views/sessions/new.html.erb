<h2>Sign in</h2>
<div>
  <%= form_tag login_path do %>
    <% if @error %>
      <div><%= @error %></div>
    <% end %>
  <div>
    <%= label_tag :username %><br>
    <%= text_field_tag :username, '', autofocus: true %>
  </div>

  <div>
    <%= label_tag :password %><br>
    <%= password_field_tag :password, '', autocomplete: "off" %>
  </div>

  <div>
    <%= submit_tag "Sign in" %>
  </div>
  <% end %>
</div>
