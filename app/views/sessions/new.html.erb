<h2>Sign in</h2>
<div>
  <%= form_tag login_path do %>
    <% if @error %>
      <div><%= @error %></div>
    <% end %>
  <div>
    <%= label_tag :username %>
    <%= text_field_tag :username, '', autofocus: true, placeholder: "username" %>
  </div>

  <div>
    <%= label_tag :password %>
    <%= password_field_tag :password, '', autocomplete: "off", placeholder: "password" %>
  </div>

  <div>
    <%= submit_tag "Sign in" %>
  </div>
  <% end %>
</div>
