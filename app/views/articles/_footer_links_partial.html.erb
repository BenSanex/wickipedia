<div class="footer-links-partial">
    <% if user_signed_in? %>
    <% if @article.published %>
    <span class="article-link"><%= link_to "Unpublish", publish_article_path(@article.category.name, @article), method: :put %></span>
    <% else %>
      <span class="article-link"><%= link_to "Publish", publish_article_path(@article.category.name, @article), method: :put %></span>
    <% end %>
    <% end %>
    <% if admin_signed_in? %>
    <% if @article.featured %>
      <span class="article-link"><%= link_to "Unfeature", feature_article_path(@article.category.name, @article), method: :patch %></span>
      <% else %>
      <span class="article-link"><%= link_to "Feature", feature_article_path(@article.category.name, @article), method: :patch %></span>
      <% end %>
      <span class="article-link"><%= link_to "Delete", delete_article_path(@article.category.name, @article), method: :delete %></span>
    <% end %>
</div>
